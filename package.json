{
  "name": "fairment-darmkur-app",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "seed": "prisma db seed",
    "db:reset": "prisma db push --force-reset && npm run seed",
    "db:studio": "prisma studio",
    "icons:convert": "tsx scripts/convert-icons.ts",
    "release": "commit-and-tag-version",
    "postrelease": "git push --follow-tags origin HEAD && gh release create v%npm_package_version% -F CHANGELOG.md"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "autoprefixer": "^10.4.19",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.6.0",
    "next": "^15.5.2",
    "postcss": "^8.4.41",
    "prisma": "^6.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.2.0",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.9",
    "tsx": "^4.16.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.15",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.2",
    "typescript": "^5.5.4",
    "commit-and-tag-version": "^12.4.0"
  },
  "commit-and-tag-version": {
    "preset": "conventionalcommits",
    "releaseCommitMessageFormat": "chore(release): {{currentTag}}"
  }
}
